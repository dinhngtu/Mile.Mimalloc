<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Mile.Mimalloc</id>
    <version>$version$</version>
    <description>Mimalloc Dynamic Linked Library</description>
    <authors>Tu Dinh, Kenji Mouri</authors>
    <projectUrl>https://github.com/ProjectMile/Mile.Mimalloc</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="file">build\native\License.txt</license>
    <readme>build\native\ReadMe.md</readme>
    <dependencies>
      <group targetFramework="native0.0" />
    </dependencies>
    <repository type="git" url="https://github.com/ProjectMile/Mile.Mimalloc.git" />
  </metadata>
  <files>

    <file src="..\Output\x86-secure\Release\*.dll" target="build\native\Redist\x86" />
    <file src="..\Output\x86-secure\Release\*.lib" target="build\native\Lib\x86" />

    <file src="..\Output\x64-secure\Release\*.dll" target="build\native\Redist\x64" />
    <file src="..\Output\x64-secure\Release\*.lib" target="build\native\Lib\x64" />

    <file src="..\Output\arm64-secure\Release\*.dll" target="build\native\Redist\ARM64" />
    <file src="..\Output\arm64-secure\Release\*.lib" target="build\native\Lib\ARM64" />

    <file src="..\mimalloc\include\*.h" target="build\native\Include" />

    <file src="Mile.Mimalloc.targets" target="build\native"/>

    <file src="..\mimalloc\bin\minject.exe" target="build\native" />
    <file src="..\mimalloc\bin\minject32.exe" target="build\native" />
    <file src="..\mimalloc\bin\minject-arm64.exe" target="build\native" />

    <file src="..\ReadMe.md" target="build\native"/>
    <file src="..\License.txt" target="build\native"/>
    <file src="..\ReleaseNotes.md" target="build\native"/>

  </files>
</package>
